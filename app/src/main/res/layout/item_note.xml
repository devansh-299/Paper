<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/noteCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/value_100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/value_5dp"
    app:cardElevation="@dimen/value_2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/value_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="@dimen/value_20sp"
            android:layout_marginBottom="@dimen/value_5dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content"
            android:textSize="@dimen/value_16sp"
            android:layout_marginBottom="@dimen/value_5dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/item_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Update"
            android:textSize="@dimen/value_10sp"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>